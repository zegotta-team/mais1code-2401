    document.addEventListener('DOMContentLoaded', (event) => {
        const button = document.getElementById('icon-button');
        const lockIcon = button.querySelector('.fa-lock');
        const lockOpenIcon = button.querySelector('.fa-lock-open');

        button.addEventListener('mouseenter', () => {
            lockIcon.style.display = 'none';
            lockOpenIcon.style.display = '';
        });

        button.addEventListener('mouseleave', () => {
            lockIcon.style.display = '';
            lockOpenIcon.style.display = 'none';

